# Configuración de headers para optimización de rendimiento

# Compresión y caché para archivos estáticos
/assets/*
  Cache-Control: public, max-age=31536000, immutable
  Content-Encoding: gzip, br

# HTML - No cachear para contenido dinámico
/*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Service Worker - No cachear
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Manifest y otros archivos de configuración
/manifest.json
  Cache-Control: public, max-age=86400

# Robots y sitemap
/robots.txt
  Cache-Control: public, max-age=86400
/sitemap.xml
  Cache-Control: public, max-age=86400

# Imágenes - Cachear por 1 año
*.webp
  Cache-Control: public, max-age=31536000, immutable
*.jpg
  Cache-Control: public, max-age=31536000, immutable
*.png
  Cache-Control: public, max-age=31536000, immutable
*.svg
  Cache-Control: public, max-age=31536000, immutable

# Audio y video
*.mp3
  Cache-Control: public, max-age=31536000, immutable
*.webm
  Cache-Control: public, max-age=31536000, immutable

# Fuentes (si las tienes)
*.woff2
  Cache-Control: public, max-age=31536000, immutable
*.woff
  Cache-Control: public, max-age=31536000, immutable
*.ttf
  Cache-Control: public, max-age=31536000, immutable

# Seguridad
/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Content-Security-Policy: default-src 'self' 'unsafe-inline' 'unsafe-eval' data: blob:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://unpkg.com https://fonts.googleapis.com https://elevenlabs.io blob:; worker-src 'self' blob:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: blob:; connect-src 'self' https://api.elevenlabs.io https://elevenlabs.io wss:; frame-src 'self' https://elevenlabs.io; object-src 'none'; base-uri 'self';
